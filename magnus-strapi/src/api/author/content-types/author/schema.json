{
    "kind": "collectionType",
    "collectionName": "authors",
    "info": {
        "singularName": "author",
        "pluralName": "authors",
        "displayName": "Author",
        "description": "Article authors and journalists"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "maxLength": 100
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "bio": {
            "type": "richtext",
            "maxLength": 1000
        },
        "profile_picture": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "role": {
            "type": "enumeration",
            "enum": [
                "Reporter",
                "Editor",
                "Columnist",
                "Guest",
                "Contributor"
            ],
            "default": "Reporter",
            "required": true
        },
        "email": {
            "type": "email",
            "required": false
        },
        "twitter": {
            "type": "string",
            "maxLength": 100
        },
        "linkedin": {
            "type": "string",
            "maxLength": 200
        },
        "verified": {
            "type": "boolean",
            "default": true
        },
        "articles": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::article.article",
            "mappedBy": "author"
        }
    }
}